{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "declaration": true,                
    "declarationMap": true,            
    "strict": true,                     
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,                    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
